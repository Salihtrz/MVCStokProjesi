@using MvcStokProjesi.Models.Entity;
@using PagedList;
@using PagedList.Mvc; 
@model PagedList.IPagedList<Tbl_Urunler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table id="tbl1" class="table table-bordered">
    <thead>
        <tr>
            <th>ÜRÜN ID</th>
            <th>ÜRÜN AD</th>
            <th>MARKA</th>
            <th>ÜRÜN KATEGORİ</th>
            <th>FİYAT</th>
            <th>KALAN STOK</th>
            <th>SİL</th>
            <th>GÜNCELLE</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var urn in Model)
            {
        <tr>
            <th>@urn.UrunID</th>
            <td>@urn.UrunAd</td>
            <td>@urn.Marka</td>
            <td>@urn.Tbl_Kategoriler.KategoriAd</td>
            <td>@urn.Fiyat</td>
            <td>@urn.Stok</td>
            <td><a href="/Urunler/SIL/@urn.UrunID" class="btn btn-danger">SİL</a></td>
            <td><a href="/Urunler/UrunGetir/@urn.UrunID" class="btn btn-success">GÜNCELLE</a></td>
        </tr>
            }
    </tbody>
</table>
@Html.PagedListPager((IPagedList) Model, sayfa => Url.Action("Index", new { sayfa}))

<a href="/Urunler/YeniUrun/" class="btn btn-primary">YENİ ÜRÜN EKLE</a>

<link href="~/Content/DataTables/css/dataTables.bootstrap4.css" rel="stylesheet" />
